<script>
// floating petals animation
function createPetals(){
const container=document.getElementById("petals-container");
for(let i=0;i<25;i++){
let petal=document.createElement("div");
petal.innerHTML="❀";
petal.className="absolute text-[#E8A8B8] opacity-30";
petal.style.left=Math.random()*100+"%";
petal.style.top="-50px";
container.appendChild(petal);

petal.animate([
{transform:"translateY(0) rotate(0deg)"},
{transform:`translateY(${window.innerHeight+200}px) rotate(360deg)`}
],{
duration:18000+Math.random()*8000,
iterations:Infinity
});
}}
createPetals();

// navbar shadow on scroll
window.addEventListener("scroll",()=>{
const nav=document.getElementById("navbar");
window.scrollY>80?nav.classList.add("shadow-md"):nav.classList.remove("shadow-md");
});
</script>

