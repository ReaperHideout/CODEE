<!-- HEADER -->
<section class="py-16 lg:py-24">

<div class="max-w-7xl mx-auto px-6 lg:px-12 mb-8">
<div class="flex flex-wrap items-end justify-between gap-4 border-b border-[#EDE1DB] pb-6">

<div>
<span class="inline-flex items-center gap-2 text-xs uppercase tracking-[0.065em] text-[#E8A8B8]">
